<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="botonReg" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/fondo</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/ic_launcher_background</item>
    </style>

    <style name="ColoredHandleTheme">
        <item name="colorControlActivated">@color/secondaryLightColor</item>
    </style>

    <style name="popup_style" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
